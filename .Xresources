Xcursor.theme: capitaine-cursors
Xft.dpi: 96

!! Appearance
urxvt.termName: rxvt-unicode
urxvt.scrollBar: false
urxvt.background: #1d1f21
urxvt.foreground: #c5c8c6
urxvt.cursorColor: #c5c8c6
urxvt.cursorUnderline: true
!! Font prefferenes
urxvt.font: xft:DejaVuSansMono Nerd Font:pixelsize=12
urxvt.boldFont: xft:DejaVu Sans Mono:pixelsize=13:weight=bold
urxvt.letterSpace: -1
!! Larger history limit
urxvt.saveLines: 1000000
!! Disable ISO14755 mode
URxvt.iso14755: false
URxvt.iso14755_52: false

!! Perl extensions
urxvt.perl-ext-common: default,matcher,font-size,clipboard,url-select,keyboard-select
!! keyboard-select
urxvt.keysym.M-u: perl:keyboard-select:activate
!! Open urls in browser with Control-Click
urxvt.urlLauncher: /usr/bin/firefox
urxvt.matcher.button: C1
!! Change font size on Control-Plus/Minus
URxvt.keysym.Control-0x2b: perl:font-size:increase
URxvt.keysym.Control-0x2d: perl:font-size:decrease

!! Vim keys
urxvt.keysym.Home:          \033[1~
urxvt.keysym.End:           \033[4~
urxvt.keysym.Control-Up:    \033[1;5A
urxvt.keysym.Control-Down:  \033[1;5B
urxvt.keysym.Control-Left:  \033[1;5D
urxvt.keysym.Control-Right: \033[1;5C

!! Chalkboard color theme
URxvt.color0: #282a2e
URxvt.color1: #a54242
URxvt.color2: #8c9440
URxvt.color3: #de935f
URxvt.color4: #5f819d
URxvt.color5: #85678f
URxvt.color6: #5e8d87
URxvt.color7: #707880
URxvt.color8: #373b41
URxvt.color9: #cc6666
URxvt.color10: #b5bd68
URxvt.color11: #f0c674
URxvt.color12: #81a2be
URxvt.color13: #b294bb
URxvt.color14: #8abeb7
URxvt.color15: #c5c8c6
