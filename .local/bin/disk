#!/usr/bin/sh

menu() {
    local selection=$(printf 'Mount\nUnmount' | dmenu)
    case "$selection" in
        Mount) mount;;
        Unmount) unmount;;
    esac
}

mount() {
    selm && [ -n "$PART" ] && udisksctl mount -b /dev/$PART
}

unmount() {
    selu && [ -n "$PART" ] && udisksctl unmount -b /dev/$PART
}

selm() {
    #                                                                         remove disks  remove disk str  remove mounted    trim whitespace
    PART=$(lsblk --noheadings --list --output=TYPE,MOUNTPOINT,NAME,SIZE,LABEL | grep part | cut -d' ' -f2- | sed '/^\//d' | sed 's/^[ \t]*//;s/[ \t]*$//' | dmenu -l 10 | awk '{print $1}')
}

selu() {
    PART=$(lsblk --noheadings --list --output=TYPE,NAME,SIZE,LABEL,MOUNTPOINT | grep part | cut -d' ' -f2- | sed '/\//!d' | dmenu -l 10 | awk '{print $1}')
}

menu
