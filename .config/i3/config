# Required Applications
# - slock
# - rofi
# - kitty
# - dunst
# - playerctl
# - pactl
# - brightnessctl

# ---------
# Variables
# ---------
set $mod Mod4
set $term kitty
set $launcher rofi -show combi
set $font "NotoSans 10"
set $monospace-font "JetbrainsMono Nerd Font 10"
set $cursor-theme LyraX-cursors
set $gtk-theme "Gruvbox-Material-Dark"
set $gtk-icon-theme "Gruvbox-Material-Dark"

# Workspace names
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

# Colors
#set $color-accent #45403d
set $color-accent #a96b2c
#set $color-bg #32302f
#set $color-bg-dark #1d2021
set $color-bg #45403d
set $color-bg-dark #282828
set $color-fg #d4be98

# ------
# Output
# ------
exec_always --no-startup-id ~/.fehbg

# ----------
# Status Bar
# ----------
bar {
    i3bar_command ~/.config/polybar/launch.sh
}

# ------
# Colors
# ------
#                       title-border    title-background  title-text  indicator  border
#client.focused          $color-accent   $color-accent     #eeeeee     #ffffff    $color-accent
client.focused          $color-accent   $color-accent     #1d2021     #ffffff    $color-accent
client.focused_inactive $color-bg       $color-bg         $color-fg   #ffffff    $color-bg
client.unfocused        $color-bg-dark  $color-bg-dark    $color-fg   #ffffff    $color-bg-dark
#client.urgent

# -------------
# Other theming
# -------------
font "pango:NotoSans 10"
smart_gaps on
#smart_borders on
gaps inner 5
title_align center

exec_always --no-startup-id gsettings set org.gnome.desktop.interface gtk-theme $gtk-theme
exec_always --no-startup-id gsettings set org.gnome.desktop.interface icon-theme $gtk-icon-theme
exec_always --no-startup-id gsettings set org.gnome.desktop.interface cursor-theme $cursor-theme
exec_always --no-startup-id gsettings set org.gnome.desktop.interface font-name $font
exec_always --no-startup-id gsettings set org.gnome.desktop.interface monospace-font-name $monospace-font

# ------------
# Window rules
# ------------
# Make first workspace floating
for_window [workspace=$ws1] floating enable

assign [class="Steam"] $ws5
assign [class="discord"] $ws7
assign [class="thunderbird"] $ws6

for_window [class="zoom"] floating enable
for_window [class="steam_app" title="Origin"] floating enable
for_window [class="Birdy3d"] floating enable
for_window [class="Thunderbird" title=".*Erinnerung(en)?$"] floating enable

for_window [class="qemu-system-x86_64"] floating enable

# --------
# Keybinds
# --------
# Moving Windows
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Workspaces
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Multimedia Keys
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioPlay exec --no-startup-id playerctl-current play-pause
bindsym XF86AudioPrev exec --no-startup-id playerctl-current previous
bindsym XF86AudioNext exec --no-startup-id playerctl-current next
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%

# Start Applications
bindsym $mod+Return exec $term
bindsym $mod+d exec $launcher
bindsym $mod+q kill

bindsym $mod+Control+w exec firefox
bindsym $mod+Control+y exec firefox -p Youtube
#bindsym $mod+Control+n exec PYTHONWARNINGS="ignore" $term ranger
bindsym $mod+Control+n exec $term lf

# Layout
#bindsym $mod+c split none
bindsym $mod+v split vertical
bindsym $mod+b split horizontal

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+a focus parent
bindsym $mod+y focus child
bindsym $mod+x sticky toggle
bindsym $mod+f fullscreen toggle

floating_modifier $mod
bindsym $mod+space floating toggle
bindsym $mod+Shift+space focus mode_toggle

# Resizing
mode "resize" {
    bindsym h resize shrink width 10px
    bindsym j resize grow height 10px
    bindsym k resize shrink height 10px
    bindsym l resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# System (Exit, Shutdown, ...)
bindsym Control+Mod4+Mod1+q exit
#bindsym Control+Mod4+Mod1+l exec --no-startup-id loginctl lock-session
bindsym Control+Mod4+Mod1+l --release exec --no-startup-id slock
bindsym Control+Mod4+Mod1+s exec --no-startup-id systemctl poweroff
bindsym Control+Mod4+Mod1+r exec --no-startup-id systemctl reboot

# Scratchpad
for_window [instance="keepassxc"] move scratchpad
for_window [instance="keepassxc" title=".*Unlock Database.*"] move workspace current; move position center
bindsym $mod+o scratchpad show

# ---------
# Autostart
# ---------
exec --no-startup-id picom
exec --no-startup-id xss-lock slock
exec --no-startup-id dunst

exec --no-startup-id discord &
exec --no-startup-id thunderbird &
exec --no-startup-id keepassxc &
